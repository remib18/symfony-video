{% extends '_layouts/base.html.twig' %}

{% block title %}Blog{% endblock %}

{% block body %}
    <div class="container">
        <section id="blog" class="mt-10">
            <h2 class="scroll-m-20 border-b pb-1 text-3xl font-semibold tracking-tight">Blog</h2>

            <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3 mt-6">
                {% for post in blog_posts %}
                    <a href="{{ path('app_blog_post_show', {'slug': post.slug}) }}">
                        <div class="flex flex-col rounded-md border border-input bg-transparent px-4 py-2 cursor-pointer transition-transform hover:scale-105">
                            <h3 class="text-xl font-semibold tracking-tight">{{ post.title }}</h3>
                            <p class="text-xs text-muted-foreground mb-2">{{ post.author }}</p>
                            <p class="text-sm text-muted-foreground">{{ post.summary }}</p>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </section>
    </div>
{% endblock %}
